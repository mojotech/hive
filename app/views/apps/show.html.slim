- if @documents
  .docs
  - @documents.each do |document|
    .doc
      = link_to document.path, app_document_path(@app, document.sha)
- else
  .no-docs No Hive documentation

= link_to 'Lanes', app_lanes_path(@app)

.features
  h4 Features
  - @app.features.each do |feature|
    .feature
      = link_to feature.title, app_feature_path(@app, feature)

.feature-form
  h4 New Feature
  = bootstrap_form_for [@app, Feature.new] do |f|
    = f.text_field :title
    = f.submit
